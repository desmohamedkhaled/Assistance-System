@model IEnumerable<AssistanceManagementSystem.Models.Project>
@{
    ViewData["Title"] = "إدارة المشاريع";
}

<div class="page-header">
    <div class="d-flex flex-column flex-sm-row align-items-center justify-content-between">
        <div>
            <h1 class="page-title d-flex align-items-center gap-3">
                <div class="header-icon">
                    <i class="fas fa-project-diagram"></i>
                </div>
                إدارة المشاريع
            </h1>
            <p class="page-subtitle">إدارة المشاريع والبرامج التنموية</p>
        </div>
        <div class="mt-4 mt-sm-0">
            <a href="@Url.Action("Create", "Projects")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                إضافة مشروع جديد
            </a>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="stats-grid mb-8">
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon">
                <i class="fas fa-project-diagram"></i>
            </div>
            <div class="stat-title">إجمالي المشاريع</div>
        </div>
        <div class="stat-value">@Model.Count()</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background: linear-gradient(135deg, var(--success-500), var(--success-600));">
                <i class="fas fa-play-circle"></i>
            </div>
            <div class="stat-title">مشاريع نشطة</div>
        </div>
        <div class="stat-value">@Model.Count(p => p.Status == "نشط")</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background: linear-gradient(135deg, var(--warning-500), var(--warning-600));">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-title">قيد التنفيذ</div>
        </div>
        <div class="stat-value">@Model.Count(p => p.Status == "قيد التنفيذ")</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background: linear-gradient(135deg, var(--info-500), var(--info-600));">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-title">مشاريع مكتملة</div>
        </div>
        <div class="stat-value">@Model.Count(p => p.Status == "مكتمل")</div>
    </div>
</div>

<!-- Projects Table -->
<div class="content-section">
    <div class="section-header">
        <h2 class="section-title d-flex align-items-center gap-3">
            <div class="header-icon" style="background: linear-gradient(135deg, var(--secondary-500), var(--secondary-600));">
                <i class="fas fa-table"></i>
            </div>
            قائمة المشاريع
        </h2>
    </div>
        
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>المشروع</th>
                    <th>النوع</th>
                    <th>المؤسسة</th>
                    <th>الميزانية</th>
                    <th>الحالة</th>
                    <th>تاريخ البداية</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var project in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="table-avatar">
                                                <i class="fas fa-project-diagram"></i>
                                            </div>
                                        </div>
                                        <div class="mr-4">
                                            <div class="table-text-primary">@project.Name</div>
                                            <div class="table-text-secondary">@project.Description</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @{
                                        var typeClass = project.Type switch
                                        {
                                            "اجتماعي" => "badge-success",
                                            "طبي" => "badge-error",
                                            "تعليمي" => "badge-info",
                                            "تنموي" => "badge-primary",
                                            _ => "badge-neutral"
                                        };
                                    }
                                    <span class="badge @typeClass">
                                        @project.Type
                                    </span>
                                </td>
                                <td>
                                    @project.Organization?.Name
                                </td>
                                <td>
                                    @project.Budget.ToString("N0") ج.م
                                </td>
                                <td>
                                    @{
                                        var statusClass = project.Status switch
                                        {
                                            "نشط" => "badge-success",
                                            "قيد التنفيذ" => "badge-warning",
                                            "مكتمل" => "badge-info",
                                            "معلق" => "badge-error",
                                            _ => "badge-neutral"
                                        };
                                    }
                                    <span class="badge @statusClass">
                                        @project.Status
                                    </span>
                                </td>
                                <td>
                                    @project.StartDate.ToString("yyyy-MM-dd")
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("Details", "Projects", new { id = project.Id })" class="btn btn-sm btn-outline">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Projects", new { id = project.Id })" class="btn btn-sm btn-outline">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Projects", new { id = project.Id })" class="btn btn-sm btn-outline" onclick="return confirm('هل أنت متأكد من حذف هذا المشروع؟')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-12">
                                <i class="fas fa-inbox text-4xl text-neutral-300 mb-4"></i>
                                <p class="text-lg text-neutral-900">لا توجد مشاريع في النظام</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
