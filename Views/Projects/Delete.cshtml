@model AssistanceManagementSystem.Models.Project
@{
    ViewData["Title"] = "حذف المشروع";
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-trash text-danger-600 mr-3"></i>
                    حذف المشروع
                </h1>
                <p class="text-gray-600">تأكيد حذف المشروع من النظام</p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="@Url.Action("Index", "Projects")" class="btn-secondary">
                    <i class="fas fa-arrow-right mr-2"></i>
                    العودة للقائمة
                </a>
            </div>
        </div>
    </div>

    <!-- Warning Message -->
    <div class="bg-red-50 border border-red-200 rounded-xl p-6 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle text-red-400 text-xl"></i>
            </div>
            <div class="mr-3">
                <h3 class="text-sm font-medium text-red-800">تحذير</h3>
                <div class="mt-2 text-sm text-red-700">
                    <p>هل أنت متأكد من حذف هذا المشروع؟ هذا الإجراء لا يمكن التراجع عنه.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Project Details -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">
            <i class="fas fa-project-diagram text-primary-600 mr-2"></i>
            تفاصيل المشروع المراد حذفه
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">اسم المشروع</label>
                <p class="text-lg font-semibold text-gray-900">@Model.Name</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">نوع المشروع</label>
                @{
                    var typeClass = Model.Type switch
                    {
                        "اجتماعي" => "bg-green-100 text-green-800",
                        "طبي" => "bg-red-100 text-red-800",
                        "تعليمي" => "bg-blue-100 text-blue-800",
                        "تنموي" => "bg-purple-100 text-purple-800",
                        _ => "bg-gray-100 text-gray-800"
                    };
                }
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @typeClass">
                    @Model.Type
                </span>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">المؤسسة</label>
                <p class="text-gray-900">@Model.Organization?.Name</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">الميزانية</label>
                <p class="text-lg font-semibold text-gray-900">@Model.Budget.ToString("N0") ج.م</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">حالة المشروع</label>
                @{
                    var statusClass = Model.Status switch
                    {
                        "نشط" => "bg-success-100 text-success-800",
                        "قيد التنفيذ" => "bg-warning-100 text-warning-800",
                        "مكتمل" => "bg-info-100 text-info-800",
                        "معلق" => "bg-danger-100 text-danger-800",
                        _ => "bg-gray-100 text-gray-800"
                    };
                }
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @statusClass">
                    @Model.Status
                </span>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">تاريخ البداية</label>
                <p class="text-gray-900">@Model.StartDate.ToString("yyyy-MM-dd")</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">تاريخ النهاية</label>
                <p class="text-gray-900">@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "غير محدد")</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">تاريخ الإنشاء</label>
                <p class="text-gray-900">@Model.CreatedAt.ToString("yyyy-MM-dd")</p>
            </div>
            
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">وصف المشروع</label>
                <p class="text-gray-900">@Model.Description</p>
            </div>
        </div>
    </div>

    <!-- Delete Form -->
    <div class="bg-white rounded-xl shadow-lg p-6 mt-6">
        <form asp-action="Delete" method="post" class="space-y-6">
            <input type="hidden" asp-for="Id" />
            
            <div class="flex justify-end space-x-4 space-x-reverse">
                <a href="@Url.Action("Index", "Projects")" class="btn-secondary">
                    <i class="fas fa-times mr-2"></i>
                    إلغاء
                </a>
                <button type="submit" class="btn-danger">
                    <i class="fas fa-trash mr-2"></i>
                    تأكيد الحذف
                </button>
            </div>
        </form>
    </div>
</div>