@model IEnumerable<AssistanceManagementSystem.Models.Assistance>
@{
    ViewData["Title"] = "التقرير المالي";
    var financialStats = ViewBag.FinancialStats as dynamic;
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-chart-line text-primary-600 mr-3"></i>
                    التقرير المالي
                </h1>
                <p class="text-gray-600">عرض وتحليل الإحصائيات المالية والتحليل المالي للنظام</p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="@Url.Action("Index", "Reports")" class="btn-secondary">
                    <i class="fas fa-arrow-right mr-2"></i>
                    العودة للتقارير
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">
            <i class="fas fa-filter text-primary-600 mr-2"></i>
            تصفية البيانات
        </h2>
        
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">من تاريخ</label>
                <input type="date" name="fromDate" value="@(ViewBag.FromDate?.ToString("yyyy-MM-dd"))" class="form-input">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">إلى تاريخ</label>
                <input type="date" name="toDate" value="@(ViewBag.ToDate?.ToString("yyyy-MM-dd"))" class="form-input">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">الفرع</label>
                <select name="branchId" class="form-select">
                    <option value="">جميع الفروع</option>
                    @if (ViewBag.Branches != null)
                    {
                        @foreach (var branch in ViewBag.Branches)
                        {
                            <option value="@branch.Id" selected="@(ViewBag.BranchId == branch.Id)">@branch.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="md:col-span-2 lg:col-span-4 flex gap-2">
                <button type="submit" class="btn-primary">
                    <i class="fas fa-search mr-2"></i>
                    تطبيق التصفية
                </button>
                <a href="@Url.Action("Financial", "Reports")" class="btn-secondary">
                    <i class="fas fa-times mr-2"></i>
                    مسح التصفية
                </a>
            </div>
        </form>
    </div>

    <!-- Financial Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-primary-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">إجمالي المبلغ</p>
                    <p class="text-3xl font-bold text-primary-600">@(financialStats?.TotalAmount?.ToString("N0") ?? "0") ج.م</p>
                </div>
                <div class="p-3 bg-primary-100 rounded-full">
                    <i class="fas fa-money-bill-wave text-primary-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-success-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">المبلغ المدفوع</p>
                    <p class="text-3xl font-bold text-success-600">@(financialStats?.PaidAmount?.ToString("N0") ?? "0") ج.م</p>
                </div>
                <div class="p-3 bg-success-100 rounded-full">
                    <i class="fas fa-check-circle text-success-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-warning-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">المبلغ المعلق</p>
                    <p class="text-3xl font-bold text-warning-600">@(financialStats?.PendingAmount?.ToString("N0") ?? "0") ج.م</p>
                </div>
                <div class="p-3 bg-warning-100 rounded-full">
                    <i class="fas fa-clock text-warning-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-info-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">المبلغ المعتمد</p>
                    <p class="text-3xl font-bold text-info-600">@(financialStats?.ApprovedAmount?.ToString("N0") ?? "0") ج.م</p>
                </div>
                <div class="p-3 bg-info-100 rounded-full">
                    <i class="fas fa-thumbs-up text-info-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- Payment Status Chart -->
        <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-chart-pie text-primary-600 mr-2"></i>
                توزيع المبالغ حسب الحالة
            </h3>
            <div class="h-64 flex items-center justify-center">
                <canvas id="paymentStatusChart"></canvas>
            </div>
        </div>

        <!-- Monthly Financial Trends -->
        <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-chart-line text-success-600 mr-2"></i>
                الاتجاهات المالية الشهرية
            </h3>
            <div class="h-64 flex items-center justify-center">
                <canvas id="monthlyFinancialChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Financial Analysis -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h3 class="text-xl font-bold text-gray-800 mb-4">
            <i class="fas fa-analytics text-info-600 mr-2"></i>
            التحليل المالي
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center p-6 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-primary-600 mb-2">
                    @if (financialStats?.TotalAmount > 0)
                    {
                        @(((decimal)financialStats.PaidAmount / (decimal)financialStats.TotalAmount * 100).ToString("F1"))
                    }
                    else
                    {
                        <text>0</text>
                    }%
                </div>
                <div class="text-sm text-gray-600">نسبة المدفوع</div>
            </div>
            
            <div class="text-center p-6 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-warning-600 mb-2">
                    @if (financialStats?.TotalAmount > 0)
                    {
                        @(((decimal)financialStats.PendingAmount / (decimal)financialStats.TotalAmount * 100).ToString("F1"))
                    }
                    else
                    {
                        <text>0</text>
                    }%
                </div>
                <div class="text-sm text-gray-600">نسبة المعلق</div>
            </div>
            
            <div class="text-center p-6 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-info-600 mb-2">
                    @if (financialStats?.TotalAmount > 0)
                    {
                        @(((decimal)financialStats.ApprovedAmount / (decimal)financialStats.TotalAmount * 100).ToString("F1"))
                    }
                    else
                    {
                        <text>0</text>
                    }%
                </div>
                <div class="text-sm text-gray-600">نسبة المعتمد</div>
            </div>
        </div>
    </div>

    <!-- Detailed Financial Data -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-bold text-gray-800">
                <i class="fas fa-table text-primary-600 mr-2"></i>
                البيانات المالية التفصيلية
            </h2>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">المستفيد</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">نوع المساعدة</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">المبلغ</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">طريقة الدفع</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الحالة</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">التاريخ</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model.Any())
                    {
                        @foreach (var assistance in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                                                <i class="fas fa-user text-primary-600"></i>
                                            </div>
                                        </div>
                                        <div class="mr-4">
                                            <div class="text-sm font-medium text-gray-900">@assistance.Beneficiary?.FullName</div>
                                            <div class="text-sm text-gray-500">@assistance.Beneficiary?.Branch?.Name</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                                        @assistance.Type
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    @assistance.Amount.ToString("N0") ج.م
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @assistance.PaymentMethod
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var statusClass = assistance.Status switch
                                        {
                                            "مدفوع" => "bg-success-100 text-success-800",
                                            "معتمد" => "bg-primary-100 text-primary-800",
                                            "قيد المراجعة" => "bg-warning-100 text-warning-800",
                                            "معلق" => "bg-info-100 text-info-800",
                                            "مرفوض" => "bg-danger-100 text-danger-800",
                                            _ => "bg-gray-100 text-gray-800"
                                        };
                                    }
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @statusClass">
                                        @assistance.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @assistance.Date.ToString("yyyy-MM-dd")
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                                <i class="fas fa-inbox text-4xl mb-4"></i>
                                <p class="text-lg">لا توجد بيانات مالية مطابقة للمعايير المحددة</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Payment Status Chart
        const paymentStatusCtx = document.getElementById('paymentStatusChart').getContext('2d');
        new Chart(paymentStatusCtx, {
            type: 'doughnut',
            data: {
                labels: ['مدفوع', 'معتمد', 'معلق', 'قيد المراجعة'],
                datasets: [{
                    data: [
                        @(financialStats?.PaidAmount ?? 0),
                        @(financialStats?.ApprovedAmount ?? 0),
                        @(financialStats?.PendingAmount ?? 0),
                        @((financialStats?.TotalAmount ?? 0) - (financialStats?.PaidAmount ?? 0) - (financialStats?.ApprovedAmount ?? 0) - (financialStats?.PendingAmount ?? 0))
                    ],
                    backgroundColor: [
                        '#10B981',
                        '#3B82F6',
                        '#F59E0B',
                        '#EF4444'
                    ],
                    borderWidth: 2,
                    borderColor: '#ffffff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            usePointStyle: true
                        }
                    }
                }
            }
        });

        // Monthly Financial Trends Chart
        const monthlyFinancialCtx = document.getElementById('monthlyFinancialChart').getContext('2d');
        new Chart(monthlyFinancialCtx, {
            type: 'line',
            data: {
                labels: ['يناير', 'فبراير', 'مارس', 'أبريل', 'مايو', 'يونيو'],
                datasets: [{
                    label: 'إجمالي المبالغ',
                    data: [120000, 150000, 180000, 200000, 220000, 250000],
                    borderColor: '#3B82F6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }, {
                    label: 'المبالغ المدفوعة',
                    data: [100000, 120000, 150000, 170000, 190000, 220000],
                    borderColor: '#10B981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            usePointStyle: true
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.1)'
                        },
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString() + ' ج.م';
                            }
                        }
                    },
                    x: {
                        grid: {
                            color: 'rgba(0, 0, 0, 0.1)'
                        }
                    }
                }
            }
        });
    </script>
}
