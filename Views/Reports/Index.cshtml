@model dynamic
@{
    ViewData["Title"] = "التقارير";
    var statistics = ViewBag.Statistics as AssistanceManagementSystem.Services.DashboardStatistics;
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Hero Section -->
    <div class="relative overflow-hidden bg-gradient-to-r from-primary-600 to-primary-700 rounded-2xl shadow-xl mb-8">
        <div class="absolute inset-0 bg-black opacity-10"></div>
        <div class="relative px-6 py-12 sm:px-8 lg:px-12">
            <div class="text-center">
                <h1 class="text-4xl font-bold text-white mb-4">
                    <i class="fas fa-chart-bar mr-3"></i>
                    التقارير والإحصائيات
                </h1>
                <p class="text-xl text-primary-100 max-w-3xl mx-auto">
                    عرض وتحليل البيانات والإحصائيات التفصيلية للنظام
                </p>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-primary-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">إجمالي المستفيدين</p>
                    <p class="text-3xl font-bold text-primary-600">@(ViewBag.Statistics?.TotalBeneficiaries ?? 0)</p>
                </div>
                <div class="p-3 bg-primary-100 rounded-full">
                    <i class="fas fa-users text-primary-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-success-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">إجمالي المساعدات</p>
                    <p class="text-3xl font-bold text-success-600">@(ViewBag.Statistics?.TotalAssistances ?? 0)</p>
                </div>
                <div class="p-3 bg-success-100 rounded-full">
                    <i class="fas fa-hand-holding-heart text-success-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-warning-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">المبلغ المدفوع</p>
                    <p class="text-3xl font-bold text-warning-600">@(ViewBag.Statistics?.TotalPaidAmount?.ToString("N0") ?? "0") ج.م</p>
                </div>
                <div class="p-3 bg-warning-100 rounded-full">
                    <i class="fas fa-money-bill-wave text-warning-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-info-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">المساعدات المعلقة</p>
                    <p class="text-3xl font-bold text-info-600">@(statistics?.TotalPendingAmount.ToString("C") ?? "0")</p>
                </div>
                <div class="p-3 bg-info-100 rounded-full">
                    <i class="fas fa-clock text-info-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">
            <i class="fas fa-bolt text-primary-600 mr-2"></i>
            التقارير السريعة
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <a href="@Url.Action("Assistances", "Reports")" class="group">
                <div class="bg-gradient-to-r from-primary-500 to-primary-600 rounded-lg p-6 text-white hover:from-primary-600 hover:to-primary-700 transition-all duration-300 transform hover:scale-105">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold mb-2">تقرير المساعدات</h3>
                            <p class="text-primary-100 text-sm">عرض جميع المساعدات مع إمكانية التصفية والتصدير</p>
                        </div>
                        <i class="fas fa-hand-holding-heart text-3xl text-primary-200"></i>
                    </div>
                </div>
            </a>

            <a href="@Url.Action("Beneficiaries", "Reports")" class="group">
                <div class="bg-gradient-to-r from-success-500 to-success-600 rounded-lg p-6 text-white hover:from-success-600 hover:to-success-700 transition-all duration-300 transform hover:scale-105">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold mb-2">تقرير المستفيدين</h3>
                            <p class="text-success-100 text-sm">عرض بيانات المستفيدين مع إمكانية التصفية والتصدير</p>
                        </div>
                        <i class="fas fa-users text-3xl text-success-200"></i>
                    </div>
                </div>
            </a>

            <a href="@Url.Action("Financial", "Reports")" class="group">
                <div class="bg-gradient-to-r from-warning-500 to-warning-600 rounded-lg p-6 text-white hover:from-warning-600 hover:to-warning-700 transition-all duration-300 transform hover:scale-105">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold mb-2">التقرير المالي</h3>
                            <p class="text-warning-100 text-sm">عرض الإحصائيات المالية والتحليل المالي</p>
                        </div>
                        <i class="fas fa-chart-line text-3xl text-warning-200"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- Assistance Types Chart -->
        <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-chart-pie text-primary-600 mr-2"></i>
                توزيع المساعدات حسب النوع
            </h3>
            <div class="h-64 flex items-center justify-center">
                <canvas id="assistanceTypesChart"></canvas>
            </div>
        </div>

        <!-- Monthly Trends Chart -->
        <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4">
                <i class="fas fa-chart-line text-success-600 mr-2"></i>
                الاتجاهات الشهرية
            </h3>
            <div class="h-64 flex items-center justify-center">
                <canvas id="monthlyTrendsChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">
            <i class="fas fa-history text-info-600 mr-2"></i>
            النشاط الأخير
        </h3>
        <div class="space-y-4">
            <div class="flex items-center p-4 bg-gray-50 rounded-lg">
                <div class="p-2 bg-primary-100 rounded-full mr-4">
                    <i class="fas fa-plus text-primary-600"></i>
                </div>
                <div class="flex-1">
                    <p class="font-medium text-gray-800">تم إضافة مساعدة جديدة</p>
                    <p class="text-sm text-gray-600">مساعدة مالية بقيمة 5,000 ج.م للمستفيد أحمد محمد</p>
                </div>
                <span class="text-sm text-gray-500">منذ ساعتين</span>
            </div>

            <div class="flex items-center p-4 bg-gray-50 rounded-lg">
                <div class="p-2 bg-success-100 rounded-full mr-4">
                    <i class="fas fa-check text-success-600"></i>
                </div>
                <div class="flex-1">
                    <p class="font-medium text-gray-800">تم اعتماد مساعدة</p>
                    <p class="text-sm text-gray-600">مساعدة طبية بقيمة 3,000 ج.م للمستفيدة فاطمة أحمد</p>
                </div>
                <span class="text-sm text-gray-500">منذ 4 ساعات</span>
            </div>

            <div class="flex items-center p-4 bg-gray-50 rounded-lg">
                <div class="p-2 bg-warning-100 rounded-full mr-4">
                    <i class="fas fa-user-plus text-warning-600"></i>
                </div>
                <div class="flex-1">
                    <p class="font-medium text-gray-800">تم إضافة مستفيد جديد</p>
                    <p class="text-sm text-gray-600">المستفيد محمد علي حسن تم تسجيله في النظام</p>
                </div>
                <span class="text-sm text-gray-500">منذ 6 ساعات</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Assistance Types Chart
        const assistanceTypesCtx = document.getElementById('assistanceTypesChart').getContext('2d');
        new Chart(assistanceTypesCtx, {
            type: 'doughnut',
            data: {
                labels: ['مالية', 'طبية', 'تعليمية', 'أيتام', 'أرامل'],
                datasets: [{
                    data: [35, 25, 20, 15, 5],
                    backgroundColor: [
                        '#3B82F6',
                        '#10B981',
                        '#F59E0B',
                        '#EF4444',
                        '#8B5CF6'
                    ],
                    borderWidth: 2,
                    borderColor: '#ffffff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            usePointStyle: true
                        }
                    }
                }
            }
        });

        // Monthly Trends Chart
        const monthlyTrendsCtx = document.getElementById('monthlyTrendsChart').getContext('2d');
        new Chart(monthlyTrendsCtx, {
            type: 'line',
            data: {
                labels: ['يناير', 'فبراير', 'مارس', 'أبريل', 'مايو', 'يونيو'],
                datasets: [{
                    label: 'المساعدات',
                    data: [12, 19, 15, 25, 22, 30],
                    borderColor: '#3B82F6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }, {
                    label: 'المستفيدين',
                    data: [8, 15, 12, 20, 18, 25],
                    borderColor: '#10B981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            usePointStyle: true
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.1)'
                        }
                    },
                    x: {
                        grid: {
                            color: 'rgba(0, 0, 0, 0.1)'
                        }
                    }
                }
            }
        });
    </script>
}
