@model IEnumerable<AssistanceManagementSystem.Models.Beneficiary>
@{
    ViewData["Title"] = "تقرير المستفيدين";
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-users text-primary-600 mr-3"></i>
                    تقرير المستفيدين
                </h1>
                <p class="text-gray-600">عرض وتحليل بيانات جميع المستفيدين مع إمكانية التصفية والتصدير</p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="@Url.Action("Index", "Reports")" class="btn-secondary">
                    <i class="fas fa-arrow-right mr-2"></i>
                    العودة للتقارير
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">
            <i class="fas fa-filter text-primary-600 mr-2"></i>
            تصفية البيانات
        </h2>
        
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">الجنس</label>
                <select name="gender" class="form-select">
                    <option value="">جميع الأجناس</option>
                    <option value="ذكر" selected="@(ViewBag.Gender == "ذكر")">ذكر</option>
                    <option value="أنثى" selected="@(ViewBag.Gender == "أنثى")">أنثى</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">الفرع</label>
                <select name="branchId" class="form-select">
                    <option value="">جميع الفروع</option>
                    @if (ViewBag.Branches != null)
                    {
                        @foreach (var branch in ViewBag.Branches)
                        {
                            <option value="@branch.Id" selected="@(ViewBag.BranchId == branch.Id)">@branch.Name</option>
                        }
                    }
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">الحالة الاجتماعية</label>
                <select name="maritalStatus" class="form-select">
                    <option value="">جميع الحالات</option>
                    <option value="عازب" selected="@(ViewBag.MaritalStatus == "عازب")">عازب</option>
                    <option value="متزوج" selected="@(ViewBag.MaritalStatus == "متزوج")">متزوج</option>
                    <option value="مطلق" selected="@(ViewBag.MaritalStatus == "مطلق")">مطلق</option>
                    <option value="أرمل" selected="@(ViewBag.MaritalStatus == "أرمل")">أرمل</option>
                </select>
            </div>

            <div class="md:col-span-2 lg:col-span-4 flex gap-2">
                <button type="submit" class="btn-primary">
                    <i class="fas fa-search mr-2"></i>
                    تطبيق التصفية
                </button>
                <a href="@Url.Action("Beneficiaries", "Reports")" class="btn-secondary">
                    <i class="fas fa-times mr-2"></i>
                    مسح التصفية
                </a>
            </div>
        </form>
    </div>

    <!-- Export Options -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">
            <i class="fas fa-download text-success-600 mr-2"></i>
            تصدير التقرير
        </h2>
        
        <form method="post" action="@Url.Action("ExportBeneficiaries", "Reports")" class="flex flex-wrap gap-4">
            <input type="hidden" name="gender" value="@ViewBag.Gender">
            <input type="hidden" name="branchId" value="@ViewBag.BranchId">
            <input type="hidden" name="maritalStatus" value="@ViewBag.MaritalStatus">
            
            <button type="submit" name="format" value="excel" class="btn-success">
                <i class="fas fa-file-excel mr-2"></i>
                تصدير Excel
            </button>
            <button type="submit" name="format" value="pdf" class="btn-danger">
                <i class="fas fa-file-pdf mr-2"></i>
                تصدير PDF
            </button>
        </form>
    </div>

    <!-- Results Summary -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="text-center p-4 bg-primary-50 rounded-lg">
                <div class="text-2xl font-bold text-primary-600">@Model.Count()</div>
                <div class="text-sm text-gray-600">إجمالي المستفيدين</div>
            </div>
            <div class="text-center p-4 bg-success-50 rounded-lg">
                <div class="text-2xl font-bold text-success-600">@Model.Count(b => b.Gender == "ذكر")</div>
                <div class="text-sm text-gray-600">ذكور</div>
            </div>
            <div class="text-center p-4 bg-warning-50 rounded-lg">
                <div class="text-2xl font-bold text-warning-600">@Model.Count(b => b.Gender == "أنثى")</div>
                <div class="text-sm text-gray-600">إناث</div>
            </div>
            <div class="text-center p-4 bg-info-50 rounded-lg">
                <div class="text-2xl font-bold text-info-600">@Model.Sum(b => b.FamilyMembers)</div>
                <div class="text-sm text-gray-600">إجمالي أفراد العائلات</div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-bold text-gray-800">
                <i class="fas fa-table text-primary-600 mr-2"></i>
                بيانات المستفيدين
            </h2>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الاسم</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الرقم القومي</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الجنس</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الحالة الاجتماعية</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">أفراد العائلة</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الدخل</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الفرع</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">تاريخ التسجيل</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model.Any())
                    {
                        @foreach (var beneficiary in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                                                <i class="fas fa-user text-primary-600"></i>
                                            </div>
                                        </div>
                                        <div class="mr-4">
                                            <div class="text-sm font-medium text-gray-900">@beneficiary.FullName</div>
                                            <div class="text-sm text-gray-500">@beneficiary.Phone</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @beneficiary.NationalId
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var genderClass = beneficiary.Gender == "ذكر" ? "bg-blue-100 text-blue-800" : "bg-pink-100 text-pink-800";
                                    }
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @genderClass">
                                        @beneficiary.Gender
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @beneficiary.MaritalStatus
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @beneficiary.FamilyMembers
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @beneficiary.Income.ToString("N0") ج.م
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @beneficiary.Branch?.Name
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @beneficiary.CreatedAt.ToString("yyyy-MM-dd")
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                                <i class="fas fa-inbox text-4xl mb-4"></i>
                                <p class="text-lg">لا توجد مستفيدين مطابقين للمعايير المحددة</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
