@model IEnumerable<AssistanceManagementSystem.Models.Assistance>
@{
    ViewData["Title"] = "تقرير المساعدات";
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-hand-holding-heart text-primary-600 mr-3"></i>
                    تقرير المساعدات
                </h1>
                <p class="text-gray-600">عرض وتحليل جميع المساعدات مع إمكانية التصفية والتصدير</p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="@Url.Action("Index", "Reports")" class="btn-secondary">
                    <i class="fas fa-arrow-right mr-2"></i>
                    العودة للتقارير
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">
            <i class="fas fa-filter text-primary-600 mr-2"></i>
            تصفية البيانات
        </h2>
        
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">نوع المساعدة</label>
                <select name="type" class="form-select">
                    <option value="">جميع الأنواع</option>
                    <option value="مالية" selected="@(ViewBag.Type == "مالية")">مالية</option>
                    <option value="طبية" selected="@(ViewBag.Type == "طبية")">طبية</option>
                    <option value="تعليمية" selected="@(ViewBag.Type == "تعليمية")">تعليمية</option>
                    <option value="أيتام" selected="@(ViewBag.Type == "أيتام")">أيتام</option>
                    <option value="أرامل" selected="@(ViewBag.Type == "أرامل")">أرامل</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">الحالة</label>
                <select name="status" class="form-select">
                    <option value="">جميع الحالات</option>
                    <option value="معلق" selected="@(ViewBag.Status == "معلق")">معلق</option>
                    <option value="قيد المراجعة" selected="@(ViewBag.Status == "قيد المراجعة")">قيد المراجعة</option>
                    <option value="معتمد" selected="@(ViewBag.Status == "معتمد")">معتمد</option>
                    <option value="مدفوع" selected="@(ViewBag.Status == "مدفوع")">مدفوع</option>
                    <option value="مرفوض" selected="@(ViewBag.Status == "مرفوض")">مرفوض</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">من تاريخ</label>
                <input type="date" name="fromDate" value="@(ViewBag.FromDate?.ToString("yyyy-MM-dd"))" class="form-input">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">إلى تاريخ</label>
                <input type="date" name="toDate" value="@(ViewBag.ToDate?.ToString("yyyy-MM-dd"))" class="form-input">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">الفرع</label>
                <select name="branchId" class="form-select">
                    <option value="">جميع الفروع</option>
                    @if (ViewBag.Branches != null)
                    {
                        @foreach (var branch in ViewBag.Branches)
                        {
                            <option value="@branch.Id" selected="@(ViewBag.BranchId == branch.Id)">@branch.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="md:col-span-2 lg:col-span-5 flex gap-2">
                <button type="submit" class="btn-primary">
                    <i class="fas fa-search mr-2"></i>
                    تطبيق التصفية
                </button>
                <a href="@Url.Action("Assistances", "Reports")" class="btn-secondary">
                    <i class="fas fa-times mr-2"></i>
                    مسح التصفية
                </a>
            </div>
        </form>
    </div>

    <!-- Export Options -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">
            <i class="fas fa-download text-success-600 mr-2"></i>
            تصدير التقرير
        </h2>
        
        <form method="post" action="@Url.Action("ExportAssistances", "Reports")" class="flex flex-wrap gap-4">
            <input type="hidden" name="type" value="@ViewBag.Type">
            <input type="hidden" name="status" value="@ViewBag.Status">
            <input type="hidden" name="fromDate" value="@(ViewBag.FromDate?.ToString("yyyy-MM-dd"))">
            <input type="hidden" name="toDate" value="@(ViewBag.ToDate?.ToString("yyyy-MM-dd"))">
            <input type="hidden" name="branchId" value="@ViewBag.BranchId">
            
            <button type="submit" name="format" value="excel" class="btn-success">
                <i class="fas fa-file-excel mr-2"></i>
                تصدير Excel
            </button>
            <button type="submit" name="format" value="pdf" class="btn-danger">
                <i class="fas fa-file-pdf mr-2"></i>
                تصدير PDF
            </button>
        </form>
    </div>

    <!-- Results Summary -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="text-center p-4 bg-primary-50 rounded-lg">
                <div class="text-2xl font-bold text-primary-600">@Model.Count()</div>
                <div class="text-sm text-gray-600">إجمالي المساعدات</div>
            </div>
            <div class="text-center p-4 bg-success-50 rounded-lg">
                <div class="text-2xl font-bold text-success-600">@Model.Sum(a => a.Amount).ToString("N0")</div>
                <div class="text-sm text-gray-600">إجمالي المبلغ (ج.م)</div>
            </div>
            <div class="text-center p-4 bg-warning-50 rounded-lg">
                <div class="text-2xl font-bold text-warning-600">@Model.Count(a => a.Status == "مدفوع")</div>
                <div class="text-sm text-gray-600">المدفوع</div>
            </div>
            <div class="text-center p-4 bg-info-50 rounded-lg">
                <div class="text-2xl font-bold text-info-600">@Model.Count(a => a.Status == "معلق")</div>
                <div class="text-sm text-gray-600">المعلق</div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-bold text-gray-800">
                <i class="fas fa-table text-primary-600 mr-2"></i>
                بيانات المساعدات
            </h2>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">المستفيد</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">نوع المساعدة</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">المبلغ</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">طريقة الدفع</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الحالة</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">التاريخ</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الملاحظات</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model.Any())
                    {
                        @foreach (var assistance in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                                                <i class="fas fa-user text-primary-600"></i>
                                            </div>
                                        </div>
                                        <div class="mr-4">
                                            <div class="text-sm font-medium text-gray-900">@assistance.Beneficiary?.FullName</div>
                                            <div class="text-sm text-gray-500">@assistance.Beneficiary?.NationalId</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                                        @assistance.Type
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @assistance.Amount.ToString("N0") ج.م
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @assistance.PaymentMethod
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var statusClass = assistance.Status switch
                                        {
                                            "مدفوع" => "bg-success-100 text-success-800",
                                            "معتمد" => "bg-primary-100 text-primary-800",
                                            "قيد المراجعة" => "bg-warning-100 text-warning-800",
                                            "معلق" => "bg-info-100 text-info-800",
                                            "مرفوض" => "bg-danger-100 text-danger-800",
                                            _ => "bg-gray-100 text-gray-800"
                                        };
                                    }
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @statusClass">
                                        @assistance.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @assistance.Date.ToString("yyyy-MM-dd")
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900 max-w-xs truncate">
                                    @assistance.Notes
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                                <i class="fas fa-inbox text-4xl mb-4"></i>
                                <p class="text-lg">لا توجد مساعدات مطابقة للمعايير المحددة</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
