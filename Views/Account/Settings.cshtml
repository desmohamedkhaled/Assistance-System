@{
    ViewData["Title"] = "الإعدادات";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">الإعدادات</h1>
            <p class="page-subtitle">إدارة إعدادات الحساب</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="content-section mb-4">
            <div class="section-header">
                <h2 class="section-title">إعدادات الحساب</h2>
            </div>
            
            <div class="p-4">
                <div class="row">
                    <div class="col-md-6">
                        <div class="setting-item">
                            <div class="setting-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="setting-content">
                                <h5>الملف الشخصي</h5>
                                <p>تعديل بياناتك الشخصية</p>
                                <a href="@Url.Action("Profile")" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit"></i> تعديل
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="setting-item">
                            <div class="setting-icon">
                                <i class="fas fa-key"></i>
                            </div>
                            <div class="setting-content">
                                <h5>كلمة المرور</h5>
                                <p>تغيير كلمة المرور</p>
                                <a href="@Url.Action("ChangePassword")" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-key"></i> تغيير
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="content-section mb-4">
            <div class="section-header">
                <h2 class="section-title">إعدادات النظام</h2>
            </div>
            
            <div class="p-4">
                <div class="row">
                    <div class="col-md-6">
                        <div class="setting-item">
                            <div class="setting-icon">
                                <i class="fas fa-bell"></i>
                            </div>
                            <div class="setting-content">
                                <h5>الإشعارات</h5>
                                <p>إدارة إعدادات الإشعارات</p>
                                <button class="btn btn-outline-info btn-sm" disabled>
                                    <i class="fas fa-cog"></i> قريباً
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="setting-item">
                            <div class="setting-icon">
                                <i class="fas fa-palette"></i>
                            </div>
                            <div class="setting-content">
                                <h5>المظهر</h5>
                                <p>تخصيص مظهر النظام</p>
                                <button class="btn btn-outline-secondary btn-sm" disabled>
                                    <i class="fas fa-paint-brush"></i> قريباً
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="content-section">
            <div class="section-header">
                <h2 class="section-title">معلومات النظام</h2>
            </div>
            
            <div class="p-4">
                <div class="info-item">
                    <label class="info-label">إصدار النظام</label>
                    <div class="info-value">v2.1.0</div>
                </div>
                
                <div class="info-item">
                    <label class="info-label">تاريخ آخر تحديث</label>
                    <div class="info-value">@DateTime.Now.ToString("yyyy-MM-dd")</div>
                </div>
                
                <div class="info-item">
                    <label class="info-label">نوع المستخدم</label>
                    <div class="info-value">
                        @{
                            var roles = ((System.Security.Claims.ClaimsPrincipal)User).FindAll(System.Security.Claims.ClaimTypes.Role).Select(c => c.Value);
                        }
                        @string.Join(", ", roles)
                    </div>
                </div>
                
                <div class="info-item">
                    <label class="info-label">آخر تسجيل دخول</label>
                    <div class="info-value">@DateTime.Now.ToString("yyyy-MM-dd HH:mm")</div>
                </div>
            </div>
        </div>
        
        <div class="content-section mt-4">
            <div class="section-header">
                <h2 class="section-title">الإجراءات السريعة</h2>
            </div>
            
            <div class="p-4">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Profile")" class="btn btn-primary">
                        <i class="fas fa-user"></i> الملف الشخصي
                    </a>
                    <a href="@Url.Action("ChangePassword")" class="btn btn-warning">
                        <i class="fas fa-key"></i> تغيير كلمة المرور
                    </a>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-sign-out-alt"></i> تسجيل الخروج
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.setting-item {
    display: flex;
    align-items: center;
    padding: 1rem;
    border: 1px solid #e9ecef;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
}

.setting-item:hover {
    border-color: #007bff;
    box-shadow: 0 2px 8px rgba(0, 123, 255, 0.1);
}

.setting-icon {
    width: 3rem;
    height: 3rem;
    background: linear-gradient(135deg, #007bff, #0056b3);
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 1rem;
    color: white;
    font-size: 1.25rem;
}

.setting-content {
    flex: 1;
}

.setting-content h5 {
    margin: 0 0 0.25rem 0;
    font-weight: 600;
    color: #333;
}

.setting-content p {
    margin: 0 0 0.5rem 0;
    color: #666;
    font-size: 0.875rem;
}
</style>
