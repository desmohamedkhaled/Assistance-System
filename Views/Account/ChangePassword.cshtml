@model AssistanceManagementSystem.Controllers.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغيير كلمة المرور";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">تغيير كلمة المرور</h1>
            <p class="page-subtitle">تحديث كلمة المرور الخاصة بك</p>
        </div>
        <div>
            <a href="@Url.Action("Profile")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-right"></i> العودة للملف الشخصي
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="content-section">
            <div class="section-header">
                <h2 class="section-title">تغيير كلمة المرور</h2>
            </div>
            
            <div class="p-4">
                <form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="OldPassword" class="form-label">كلمة المرور الحالية</label>
                        <input asp-for="OldPassword" class="form-control" placeholder="أدخل كلمة المرور الحالية" required />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">كلمة المرور الجديدة</label>
                        <input asp-for="NewPassword" class="form-control" placeholder="أدخل كلمة المرور الجديدة" required />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <small class="form-text text-muted">يجب أن تكون كلمة المرور على الأقل 6 أحرف</small>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور الجديدة</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="أعد إدخال كلمة المرور الجديدة" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> تغيير كلمة المرور
                        </button>
                        <a href="@Url.Action("Profile")" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> إلغاء
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
        
        // Password confirmation validation
        document.querySelector('input[name="ConfirmPassword"]').addEventListener('input', function() {
            var password = document.querySelector('input[name="NewPassword"]').value;
            var confirmPassword = this.value;
            
            if (password !== confirmPassword) {
                this.setCustomValidity('كلمة المرور غير متطابقة');
            } else {
                this.setCustomValidity('');
            }
        });
        
        // Password strength indicator
        document.querySelector('input[name="NewPassword"]').addEventListener('input', function() {
            var password = this.value;
            var strength = 0;
            
            if (password.length >= 6) strength++;
            if (password.match(/[a-z]/)) strength++;
            if (password.match(/[A-Z]/)) strength++;
            if (password.match(/[0-9]/)) strength++;
            if (password.match(/[^a-zA-Z0-9]/)) strength++;
            
            var strengthText = '';
            var strengthColor = '';
            
            switch(strength) {
                case 0:
                case 1:
                    strengthText = 'ضعيف جداً';
                    strengthColor = 'text-danger';
                    break;
                case 2:
                    strengthText = 'ضعيف';
                    strengthColor = 'text-danger';
                    break;
                case 3:
                    strengthText = 'متوسط';
                    strengthColor = 'text-warning';
                    break;
                case 4:
                    strengthText = 'قوي';
                    strengthColor = 'text-success';
                    break;
                case 5:
                    strengthText = 'قوي جداً';
                    strengthColor = 'text-success';
                    break;
            }
            
            var strengthIndicator = document.getElementById('passwordStrength');
            if (!strengthIndicator) {
                strengthIndicator = document.createElement('small');
                strengthIndicator.id = 'passwordStrength';
                strengthIndicator.className = 'form-text';
                this.parentNode.appendChild(strengthIndicator);
            }
            
            if (password.length > 0) {
                strengthIndicator.textContent = 'قوة كلمة المرور: ' + strengthText;
                strengthIndicator.className = 'form-text ' + strengthColor;
            } else {
                strengthIndicator.textContent = '';
            }
        });
    </script>
}
