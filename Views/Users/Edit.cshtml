@model AssistanceManagementSystem.Controllers.EditUserViewModel
@{
    ViewData["Title"] = "تعديل المستخدم";
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-user-edit text-primary-600 mr-3"></i>
                    تعديل المستخدم
                </h1>
                <p class="text-gray-600">تعديل بيانات المستخدم والأدوار والصلاحيات</p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="@Url.Action("Index", "Users")" class="btn-secondary">
                    <i class="fas fa-arrow-right mr-2"></i>
                    العودة لقائمة المستخدمين
                </a>
            </div>
        </div>
    </div>

    <!-- Edit User Form -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <form asp-action="Edit" method="post" class="space-y-6">
            <input asp-for="Id" type="hidden" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Personal Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-gray-800 border-b border-gray-200 pb-2">
                        <i class="fas fa-user text-primary-600 mr-2"></i>
                        المعلومات الشخصية
                    </h3>
                    
                    <div>
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-2">الاسم الكامل</label>
                        <input asp-for="FullName" class="form-input" placeholder="أدخل الاسم الكامل">
                        <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="UserName" class="block text-sm font-medium text-gray-700 mb-2">اسم المستخدم</label>
                        <input asp-for="UserName" class="form-input" placeholder="أدخل اسم المستخدم">
                        <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">البريد الإلكتروني</label>
                        <input asp-for="Email" type="email" class="form-input" placeholder="أدخل البريد الإلكتروني">
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <!-- System Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-gray-800 border-b border-gray-200 pb-2">
                        <i class="fas fa-cog text-primary-600 mr-2"></i>
                        معلومات النظام
                    </h3>
                    
                    <div>
                        <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-2">كلمة المرور الجديدة</label>
                        <input asp-for="NewPassword" type="password" class="form-input" placeholder="أدخل كلمة المرور الجديدة (اتركها فارغة للاحتفاظ بالحالية)">
                        <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
                        <p class="text-sm text-gray-500 mt-1">اتركها فارغة للاحتفاظ بكلمة المرور الحالية</p>
                    </div>

                    <div>
                        <label asp-for="BranchId" class="block text-sm font-medium text-gray-700 mb-2">الفرع</label>
                        <select asp-for="BranchId" class="form-select">
                            <option value="">اختر الفرع (اختياري)</option>
                            @if (ViewBag.Branches != null)
                            {
                                @foreach (var branch in ViewBag.Branches)
                                {
                                    <option value="@branch.Id" selected="@(Model.BranchId == branch.Id)">@branch.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="BranchId" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="SelectedRole" class="block text-sm font-medium text-gray-700 mb-2">الدور</label>
                        <select asp-for="SelectedRole" class="form-select">
                            <option value="">اختر الدور</option>
                            @if (ViewBag.Roles != null)
                            {
                                @foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role.Name" selected="@(Model.SelectedRole == role.Name)">@role.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="SelectedRole" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">حالة الحساب</label>
                        <div class="flex items-center">
                            <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
                            <label asp-for="IsActive" class="mr-2 block text-sm text-gray-900">
                                حساب نشط
                            </label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Role Descriptions -->
            <div class="bg-gray-50 rounded-lg p-4">
                <h4 class="text-md font-semibold text-gray-800 mb-3">
                    <i class="fas fa-info-circle text-info-600 mr-2"></i>
                    وصف الأدوار
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 text-sm">
                    <div class="bg-white p-3 rounded border-l-4 border-red-500">
                        <strong class="text-red-600">Admin:</strong> صلاحيات كاملة على النظام
                    </div>
                    <div class="bg-white p-3 rounded border-l-4 border-blue-500">
                        <strong class="text-blue-600">Branch Manager:</strong> إدارة فرع محدد
                    </div>
                    <div class="bg-white p-3 rounded border-l-4 border-green-500">
                        <strong class="text-green-600">Staff:</strong> إدخال البيانات والمساعدات
                    </div>
                    <div class="bg-white p-3 rounded border-l-4 border-yellow-500">
                        <strong class="text-yellow-600">Approver:</strong> اعتماد المساعدات
                    </div>
                    <div class="bg-white p-3 rounded border-l-4 border-purple-500">
                        <strong class="text-purple-600">Beneficiary:</strong> عرض بياناته فقط
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex justify-end space-x-4 space-x-reverse pt-6 border-t border-gray-200">
                <a href="@Url.Action("Index", "Users")" class="btn-secondary">
                    <i class="fas fa-times mr-2"></i>
                    إلغاء
                </a>
                <button type="submit" class="btn-primary">
                    <i class="fas fa-save mr-2"></i>
                    حفظ التغييرات
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
