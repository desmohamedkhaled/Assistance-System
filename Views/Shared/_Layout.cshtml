<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام إدارة المساعدات</title>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    
    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    
    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Custom Meta Tags -->
    <meta name="description" content="نظام إدارة المساعدات - نظام متطور لإدارة المساعدات الخيرية والاجتماعية">
    <meta name="keywords" content="مساعدات, خيرية, إدارة, نظام">
    <meta name="author" content="نظام إدارة المساعدات">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
</head>
<body class="bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 min-h-screen overflow-x-hidden">
    <!-- Loading Screen -->
    <div id="loadingScreen" class="loading-screen">
        <div class="loading-content">
            <div class="loading-logo">
                <i class="fas fa-heart text-primary"></i>
            </div>
            <div class="loading-text">نظام إدارة المساعدات</div>
            <div class="loading-spinner"></div>
        </div>
    </div>

    <div class="app-container">
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar" data-aos="fade-right" data-aos-duration="800">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <div class="sidebar-brand-icon">
                        <div class="brand-icon-wrapper">
                            <i class="fas fa-heart"></i>
                        </div>
                    </div>
                    <div class="sidebar-brand-text">
                        <span class="sidebar-brand-title">نظام المساعدات</span>
                        <span class="sidebar-brand-subtitle">Assistance Management</span>
                    </div>
                </div>
                <button class="sidebar-toggle d-lg-none" id="sidebarToggle">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div class="sidebar-body">
                <ul class="sidebar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Home")">
                            <div class="nav-icon">
                                <i class="fas fa-tachometer-alt"></i>
                            </div>
                            <span class="nav-text">لوحة التحكم</span>
                            <div class="nav-indicator"></div>
                        </a>
                    </li>
                    
                    @if (User.IsInRole("Admin") || User.IsInRole("BranchManager") || User.IsInRole("Staff"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Beneficiaries")">
                                <div class="nav-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <span class="nav-text">المستفيدين</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Assistances")">
                                <div class="nav-icon">
                                    <i class="fas fa-hand-holding-heart"></i>
                                </div>
                                <span class="nav-text">المساعدات</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                    }
                    
                    @if (User.IsInRole("Admin") || User.IsInRole("BranchManager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Organizations")">
                                <div class="nav-icon">
                                    <i class="fas fa-building"></i>
                                </div>
                                <span class="nav-text">المؤسسات</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Projects")">
                                <div class="nav-icon">
                                    <i class="fas fa-project-diagram"></i>
                                </div>
                                <span class="nav-text">المشاريع</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Reports")">
                                <div class="nav-icon">
                                    <i class="fas fa-chart-bar"></i>
                                </div>
                                <span class="nav-text">التقارير</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                    }
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "UserManagement")">
                                <div class="nav-icon">
                                    <i class="fas fa-user-cog"></i>
                                </div>
                                <span class="nav-text">إدارة المستخدمين</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                    }
                    
                    @if (User.IsInRole("Staff") || User.IsInRole("Beneficiary"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("RequestAssistance", "Assistances")">
                                <div class="nav-icon">
                                    <i class="fas fa-plus-circle"></i>
                                </div>
                                <span class="nav-text">طلب مساعدة</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                    }
                    
                    @if (User.IsInRole("Beneficiary"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MyRequests", "Assistances")">
                                <div class="nav-icon">
                                    <i class="fas fa-list"></i>
                                </div>
                                <span class="nav-text">طلباتي</span>
                                <div class="nav-indicator"></div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
            
            <div class="sidebar-footer">
                <div class="user-info" data-aos="fade-up" data-aos-duration="800">
                    <div class="user-avatar">
                        <div class="avatar-wrapper">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                    <div class="user-details">
                        <div class="user-name">@User.Identity?.Name</div>
                        <div class="user-role">
                            @{
                                var roles = ((System.Security.Claims.ClaimsPrincipal)User).FindAll(System.Security.Claims.ClaimTypes.Role).Select(c => c.Value);
                            }
                            @string.Join(", ", roles)
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        
        <!-- Main Content -->
        <div class="main-content" id="mainContent">
            <!-- Header -->
            <header class="header" data-aos="fade-down" data-aos-duration="800">
                <div class="header-left">
                    <button class="sidebar-toggle d-lg-none" id="mobileSidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="header-content">
                        <div class="breadcrumb">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a href="@Url.Action("Index", "Home")">
                                            <i class="fas fa-home"></i>
                                            الرئيسية
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                                </ol>
                            </nav>
                        </div>
                        <h1 class="page-title">@ViewData["Title"]</h1>
                    </div>
                </div>
                
                <div class="header-right">
                    <div class="header-actions">
                        <!-- Search -->
                        <div class="search-container">
                            <div class="search-input-wrapper">
                                <input type="text" class="search-input" placeholder="البحث في النظام...">
                                <button class="search-btn">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                        
                        <!-- Notifications -->
                        <div class="notification-container">
                            <button class="notification-btn" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                <span class="notification-badge">3</span>
                            </button>
                            <div class="dropdown-menu notification-dropdown">
                                <div class="dropdown-header">
                                    <h6>الإشعارات</h6>
                                    <span class="badge bg-primary">3 جديد</span>
                                </div>
                                <div class="notification-list">
                                    <div class="notification-item">
                                        <div class="notification-icon">
                                            <i class="fas fa-user-plus text-success"></i>
                                        </div>
                                        <div class="notification-content">
                                            <div class="notification-title">مستفيد جديد</div>
                                            <div class="notification-text">تم إضافة مستفيد جديد</div>
                                            <div class="notification-time">منذ 5 دقائق</div>
                                        </div>
                                    </div>
                                    <div class="notification-item">
                                        <div class="notification-icon">
                                            <i class="fas fa-hand-holding-heart text-primary"></i>
                                        </div>
                                        <div class="notification-content">
                                            <div class="notification-title">طلب مساعدة جديد</div>
                                            <div class="notification-text">يحتاج إلى مراجعة</div>
                                            <div class="notification-time">منذ 10 دقائق</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown-footer">
                                    <a href="#" class="btn btn-sm btn-outline-primary">عرض الكل</a>
                                </div>
                            </div>
                        </div>
                        
                        <!-- User Profile Dropdown -->
                        <div class="user-menu">
                            <button class="user-menu-btn" type="button" data-bs-toggle="dropdown">
                                <div class="user-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="user-info">
                                    <span class="user-name">@User.Identity?.Name</span>
                                    <span class="user-role">
                                        @{
                                            var userRoles = ((System.Security.Claims.ClaimsPrincipal)User).FindAll(System.Security.Claims.ClaimTypes.Role).Select(c => c.Value);
                                        }
                                        @string.Join(", ", userRoles)
                                    </span>
                                </div>
                                <i class="fas fa-chevron-down"></i>
                            </button>
                            <div class="dropdown-menu user-dropdown">
                                <div class="dropdown-header">
                                    <div class="user-profile">
                                        <div class="user-avatar-large">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="user-details">
                                            <div class="user-name">@User.Identity?.Name</div>
                                            <div class="user-email">user@example.com</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown-body">
                                    <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                                        <i class="fas fa-user-edit"></i>
                                        <span>الملف الشخصي</span>
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("Settings", "Account")">
                                        <i class="fas fa-cog"></i>
                                        <span>الإعدادات</span>
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("Help", "Home")">
                                        <i class="fas fa-question-circle"></i>
                                        <span>المساعدة</span>
                                    </a>
                                </div>
                                <div class="dropdown-footer">
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-full">
                                        <button type="submit" class="dropdown-item logout-btn">
                                            <i class="fas fa-sign-out-alt"></i>
                                            <span>تسجيل الخروج</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Page Content -->
            <main class="page-content">
                <div class="content">
                    @RenderBody()
                </div>
            </main>
        </div>
        
        <!-- Mobile Sidebar Overlay -->
        <div class="sidebar-overlay d-lg-none" id="sidebarOverlay"></div>
    </div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Initialize AOS -->
    <script>
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            offset: 100
        });
    </script>
    
    <!-- Custom JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Hide loading screen
            setTimeout(() => {
                const loadingScreen = document.getElementById('loadingScreen');
                if (loadingScreen) {
                    loadingScreen.style.opacity = '0';
                    setTimeout(() => {
                        loadingScreen.style.display = 'none';
                    }, 300);
                }
            }, 1000);
            
            // Sidebar toggle functionality
            const sidebarToggle = document.getElementById('mobileSidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const sidebarOverlay = document.getElementById('sidebarOverlay');
            
            if (sidebarToggle && sidebar && sidebarOverlay) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('show');
                    sidebarOverlay.classList.toggle('show');
                });
                
                sidebarOverlay.addEventListener('click', function() {
                    sidebar.classList.remove('show');
                    sidebarOverlay.classList.remove('show');
                });
            }
            
            // Search functionality
            const searchInput = document.querySelector('.search-input');
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        const searchTerm = this.value.trim();
                        if (searchTerm) {
                            // Implement search functionality
                            console.log('Searching for:', searchTerm);
                        }
                    }
                });
            }
            
            // Active navigation highlighting
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>