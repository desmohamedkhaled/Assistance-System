@model AssistanceManagementSystem.Models.Assistance
@{
    ViewData["Title"] = "تفاصيل المساعدة";
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-hand-holding-heart text-primary-600 mr-3"></i>
                    تفاصيل المساعدة
                </h1>
                <p class="text-gray-600">عرض تفاصيل المساعدة والمعلومات المرتبطة بها</p>
            </div>
            <div class="mt-4 sm:mt-0 flex space-x-2 space-x-reverse">
                <a href="@Url.Action("Edit", "Assistances", new { id = Model.Id })" class="btn-primary">
                    <i class="fas fa-edit mr-2"></i>
                    تعديل
                </a>
                <a href="@Url.Action("Index", "Assistances")" class="btn-secondary">
                    <i class="fas fa-arrow-right mr-2"></i>
                    العودة للقائمة
                </a>
            </div>
        </div>
    </div>

    <!-- Assistance Details -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
        <!-- Basic Information -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-info-circle text-primary-600 mr-2"></i>
                    المعلومات الأساسية
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">نوع المساعدة</label>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
                            @Model.Type
                        </span>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">المبلغ</label>
                        <p class="text-lg font-semibold text-gray-900">@Model.Amount.ToString("N0") ج.م</p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">طريقة الدفع</label>
                        <p class="text-gray-900">@Model.PaymentMethod</p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">تاريخ المساعدة</label>
                        <p class="text-gray-900">@Model.Date.ToString("yyyy-MM-dd")</p>
                    </div>
                    
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-1">ملاحظات</label>
                        <p class="text-gray-900">@Model.Notes</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status and Actions -->
        <div>
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-cog text-primary-600 mr-2"></i>
                    الحالة والإجراءات
                </h2>
                
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">حالة المساعدة</label>
                        @{
                            var statusClass = Model.Status switch
                            {
                                "مدفوع" => "bg-success-100 text-success-800",
                                "معتمد" => "bg-primary-100 text-primary-800",
                                "قيد المراجعة" => "bg-warning-100 text-warning-800",
                                "معلق" => "bg-info-100 text-info-800",
                                "مرفوض" => "bg-danger-100 text-danger-800",
                                _ => "bg-gray-100 text-gray-800"
                            };
                        }
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @statusClass">
                            @Model.Status
                        </span>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">تاريخ الإنشاء</label>
                        <p class="text-gray-900">@Model.CreatedAt.ToString("yyyy-MM-dd")</p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">أنشئ بواسطة</label>
                        <p class="text-gray-900">@Model.CreatedByUser?.FullName</p>
                    </div>
                    
                    @if (Model.Status == "معلق")
                    {
                        <div class="pt-4 border-t border-gray-200">
                            <h3 class="text-sm font-medium text-gray-700 mb-3">إجراءات الموافقة</h3>
                            <div class="space-y-2">
                                <a href="@Url.Action("Approve", "Assistances", new { id = Model.Id })" class="btn-success w-full text-center" onclick="return confirm('هل أنت متأكد من اعتماد هذه المساعدة؟')">
                                    <i class="fas fa-check mr-2"></i>
                                    اعتماد المساعدة
                                </a>
                                <a href="@Url.Action("Reject", "Assistances", new { id = Model.Id })" class="btn-danger w-full text-center" onclick="return confirm('هل أنت متأكد من رفض هذه المساعدة؟')">
                                    <i class="fas fa-times mr-2"></i>
                                    رفض المساعدة
                                </a>
                            </div>
                        </div>
                    }
                    
                    @if (Model.Status == "معتمد")
                    {
                        <div class="pt-4 border-t border-gray-200">
                            <h3 class="text-sm font-medium text-gray-700 mb-3">إجراءات الدفع</h3>
                            <a href="@Url.Action("MarkPaid", "Assistances", new { id = Model.Id })" class="btn-success w-full text-center" onclick="return confirm('هل أنت متأكد من تسجيل هذه المساعدة كمدفوعة؟')">
                                <i class="fas fa-money-bill-wave mr-2"></i>
                                تسجيل كمدفوعة
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Beneficiary Information -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">
            <i class="fas fa-user text-primary-600 mr-2"></i>
            معلومات المستفيد
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">الاسم الكامل</label>
                <p class="text-gray-900">@Model.Beneficiary?.FullName</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">الرقم القومي</label>
                <p class="text-gray-900">@Model.Beneficiary?.NationalId</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">رقم الهاتف</label>
                <p class="text-gray-900">@Model.Beneficiary?.Phone</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">الجنس</label>
                <p class="text-gray-900">@Model.Beneficiary?.Gender</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">الحالة الاجتماعية</label>
                <p class="text-gray-900">@Model.Beneficiary?.MaritalStatus</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">عدد أفراد العائلة</label>
                <p class="text-gray-900">@Model.Beneficiary?.FamilyMembers</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">الدخل</label>
                <p class="text-gray-900">@Model.Beneficiary?.Income.ToString("N0") ج.م</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">الفرع</label>
                <p class="text-gray-900">@Model.Beneficiary?.Branch?.Name</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">العنوان</label>
                <p class="text-gray-900">@Model.Beneficiary?.Address</p>
            </div>
        </div>
    </div>
</div>
