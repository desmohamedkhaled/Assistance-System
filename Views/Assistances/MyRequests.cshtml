@model IEnumerable<AssistanceManagementSystem.Models.Assistance>
@{
    ViewData["Title"] = "طلباتي";
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-list text-primary-600 mr-3"></i>
                    طلباتي
                </h1>
                <p class="text-gray-600">عرض جميع طلبات المساعدة التي قمت بإرسالها</p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="@Url.Action("RequestAssistance", "Assistances")" class="btn-primary">
                    <i class="fas fa-plus mr-2"></i>
                    طلب مساعدة جديدة
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-primary-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">إجمالي الطلبات</p>
                    <p class="text-3xl font-bold text-primary-600">@Model.Count()</p>
                </div>
                <div class="p-3 bg-primary-100 rounded-full">
                    <i class="fas fa-list text-primary-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-success-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">المعتمدة</p>
                    <p class="text-3xl font-bold text-success-600">@Model.Count(a => a.Status == "معتمد")</p>
                </div>
                <div class="p-3 bg-success-100 rounded-full">
                    <i class="fas fa-check-circle text-success-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-warning-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">قيد المراجعة</p>
                    <p class="text-3xl font-bold text-warning-600">@Model.Count(a => a.Status == "قيد المراجعة")</p>
                </div>
                <div class="p-3 bg-warning-100 rounded-full">
                    <i class="fas fa-clock text-warning-600 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-info-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">المدفوعة</p>
                    <p class="text-3xl font-bold text-info-600">@Model.Count(a => a.Status == "مدفوع")</p>
                </div>
                <div class="p-3 bg-info-100 rounded-full">
                    <i class="fas fa-money-bill-wave text-info-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Requests Table -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-bold text-gray-800">
                <i class="fas fa-table text-primary-600 mr-2"></i>
                قائمة طلباتي
            </h2>
        </div>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">نوع المساعدة</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">المبلغ</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">طريقة الدفع</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الحالة</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">تاريخ الطلب</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الإجراءات</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model.Any())
                    {
                        @foreach (var assistance in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                                        @assistance.Type
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @assistance.Amount.ToString("N0") ج.م
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @assistance.PaymentMethod
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var statusClass = assistance.Status switch
                                        {
                                            "مدفوع" => "bg-success-100 text-success-800",
                                            "معتمد" => "bg-primary-100 text-primary-800",
                                            "قيد المراجعة" => "bg-warning-100 text-warning-800",
                                            "معلق" => "bg-info-100 text-info-800",
                                            "مرفوض" => "bg-danger-100 text-danger-800",
                                            _ => "bg-gray-100 text-gray-800"
                                        };
                                    }
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @statusClass">
                                        @assistance.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @assistance.Date.ToString("yyyy-MM-dd")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex space-x-2 space-x-reverse">
                                        <a href="@Url.Action("Details", "Assistances", new { id = assistance.Id })" class="text-info-600 hover:text-info-900">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                                <i class="fas fa-inbox text-4xl mb-4"></i>
                                <p class="text-lg">لم تقم بإرسال أي طلبات مساعدة بعد</p>
                                <a href="@Url.Action("RequestAssistance", "Assistances")" class="btn-primary mt-4">
                                    <i class="fas fa-plus mr-2"></i>
                                    إرسال طلب مساعدة جديدة
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
