@model AssistanceManagementSystem.Models.Assistance
@{
    ViewData["Title"] = "طلب مساعدة جديدة";
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-hand-holding-heart text-primary-600 mr-3"></i>
                    طلب مساعدة جديدة
                </h1>
                <p class="text-gray-600">إرسال طلب مساعدة جديدة للمراجعة والموافقة</p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="@Url.Action("Index", "Assistances")" class="btn-secondary">
                    <i class="fas fa-arrow-right mr-2"></i>
                    العودة لقائمة المساعدات
                </a>
            </div>
        </div>
    </div>

    <!-- Request Assistance Form -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <form asp-action="RequestAssistance" method="post" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Basic Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-gray-800 border-b border-gray-200 pb-2">
                        <i class="fas fa-info-circle text-primary-600 mr-2"></i>
                        المعلومات الأساسية
                    </h3>
                    
                    <div>
                        <label asp-for="BeneficiaryId" class="block text-sm font-medium text-gray-700 mb-2">المستفيد</label>
                        <select asp-for="BeneficiaryId" class="form-select" asp-items="ViewBag.Beneficiaries">
                            <option value="">اختر المستفيد</option>
                        </select>
                        <span asp-validation-for="BeneficiaryId" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Type" class="block text-sm font-medium text-gray-700 mb-2">نوع المساعدة</label>
                        <select asp-for="Type" class="form-select">
                            <option value="">اختر نوع المساعدة</option>
                            <option value="مالية">مالية</option>
                            <option value="طبية">طبية</option>
                            <option value="تعليمية">تعليمية</option>
                            <option value="أيتام">أيتام</option>
                            <option value="أرامل">أرامل</option>
                            <option value="ذوي الاحتياجات">ذوي الاحتياجات</option>
                            <option value="أسر السجناء">أسر السجناء</option>
                        </select>
                        <span asp-validation-for="Type" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Amount" class="block text-sm font-medium text-gray-700 mb-2">المبلغ المطلوب</label>
                        <input asp-for="Amount" type="number" step="0.01" class="form-input" placeholder="أدخل المبلغ المطلوب">
                        <span asp-validation-for="Amount" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="PaymentMethod" class="block text-sm font-medium text-gray-700 mb-2">طريقة الدفع المفضلة</label>
                        <select asp-for="PaymentMethod" class="form-select">
                            <option value="">اختر طريقة الدفع</option>
                            <option value="نقدي">نقدي</option>
                            <option value="تحويل بنكي">تحويل بنكي</option>
                            <option value="شيك">شيك</option>
                            <option value="حساب داخلي">حساب داخلي</option>
                            <option value="فيزا">فيزا</option>
                        </select>
                        <span asp-validation-for="PaymentMethod" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-gray-800 border-b border-gray-200 pb-2">
                        <i class="fas fa-file-alt text-primary-600 mr-2"></i>
                        تفاصيل إضافية
                    </h3>
                    
                    <div>
                        <label asp-for="Notes" class="block text-sm font-medium text-gray-700 mb-2">ملاحظات ووصف الحالة</label>
                        <textarea asp-for="Notes" class="form-textarea" rows="6" placeholder="أدخل وصف مفصل للحالة والمساعدة المطلوبة"></textarea>
                        <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
                        <p class="text-sm text-gray-500 mt-1">يرجى وصف الحالة بشكل مفصل لتسهيل عملية المراجعة والموافقة</p>
                    </div>
                </div>
            </div>

            <!-- Information Box -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-info-circle text-blue-400"></i>
                    </div>
                    <div class="mr-3">
                        <h3 class="text-sm font-medium text-blue-800">معلومات مهمة</h3>
                        <div class="mt-2 text-sm text-blue-700">
                            <ul class="list-disc list-inside space-y-1">
                                <li>سيتم مراجعة طلبك من قبل فريق المراجعة</li>
                                <li>قد يتم طلب وثائق إضافية لدعم الطلب</li>
                                <li>ستتلقى إشعاراً عند اتخاذ قرار بشأن طلبك</li>
                                <li>يرجى التأكد من صحة جميع البيانات المدخلة</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex justify-end space-x-4 space-x-reverse pt-6 border-t border-gray-200">
                <a href="@Url.Action("Index", "Assistances")" class="btn-secondary">
                    <i class="fas fa-times mr-2"></i>
                    إلغاء
                </a>
                <button type="submit" class="btn-primary">
                    <i class="fas fa-paper-plane mr-2"></i>
                    إرسال الطلب
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
