@model AssistanceManagementSystem.Models.Organization
@{
    ViewData["Title"] = "تفاصيل المؤسسة";
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-building text-primary-600 mr-3"></i>
                    تفاصيل المؤسسة
                </h1>
                <p class="text-gray-600">عرض تفاصيل المؤسسة والمشاريع المرتبطة بها</p>
            </div>
            <div class="mt-4 sm:mt-0 flex space-x-2 space-x-reverse">
                <a href="@Url.Action("Edit", "Organizations", new { id = Model.Id })" class="btn-primary">
                    <i class="fas fa-edit mr-2"></i>
                    تعديل
                </a>
                <a href="@Url.Action("Index", "Organizations")" class="btn-secondary">
                    <i class="fas fa-arrow-right mr-2"></i>
                    العودة للقائمة
                </a>
            </div>
        </div>
    </div>

    <!-- Organization Details -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
        <!-- Basic Information -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-info-circle text-primary-600 mr-2"></i>
                    المعلومات الأساسية
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">اسم المؤسسة</label>
                        <p class="text-lg font-semibold text-gray-900">@Model.Name</p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">نوع المؤسسة</label>
                        @{
                            var typeClass = Model.Type switch
                            {
                                "خيرية" => "bg-green-100 text-green-800",
                                "طبية" => "bg-red-100 text-red-800",
                                "تعليمية" => "bg-blue-100 text-blue-800",
                                "اجتماعية" => "bg-yellow-100 text-yellow-800",
                                "تنموية" => "bg-purple-100 text-purple-800",
                                _ => "bg-gray-100 text-gray-800"
                            };
                        }
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @typeClass">
                            @Model.Type
                        </span>
                    </div>
                    
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-1">العنوان</label>
                        <p class="text-gray-900">@Model.Address</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div>
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-phone text-primary-600 mr-2"></i>
                    معلومات الاتصال
                </h2>
                
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">رقم الهاتف</label>
                        <p class="text-gray-900">@Model.Phone</p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">البريد الإلكتروني</label>
                        <p class="text-gray-900">@Model.Email</p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">الشخص المسؤول</label>
                        <p class="text-gray-900">@Model.ContactPerson</p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">رقم الحساب البنكي</label>
                        <p class="text-gray-900 font-mono">@Model.AccountNumber</p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">تاريخ الإنشاء</label>
                        <p class="text-gray-900">@Model.CreatedAt.ToString("yyyy-MM-dd")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Projects Section -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-800">
                <i class="fas fa-project-diagram text-primary-600 mr-2"></i>
                المشاريع المرتبطة
            </h2>
            <a href="@Url.Action("Create", "Projects", new { organizationId = Model.Id })" class="btn-primary">
                <i class="fas fa-plus mr-2"></i>
                إضافة مشروع جديد
            </a>
        </div>
        
        @if (Model.Projects != null && Model.Projects.Any())
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">اسم المشروع</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">النوع</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الميزانية</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الحالة</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">تاريخ البداية</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var project in Model.Projects)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">@project.Name</div>
                                    <div class="text-sm text-gray-500 max-w-xs truncate">@project.Description</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var projectTypeClass = project.Type switch
                                        {
                                            "اجتماعي" => "bg-green-100 text-green-800",
                                            "طبي" => "bg-red-100 text-red-800",
                                            "تعليمي" => "bg-blue-100 text-blue-800",
                                            "تنموي" => "bg-purple-100 text-purple-800",
                                            _ => "bg-gray-100 text-gray-800"
                                        };
                                    }
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @projectTypeClass">
                                        @project.Type
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @project.Budget.ToString("N0") ج.م
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var projectStatusClass = project.Status switch
                                        {
                                            "نشط" => "bg-success-100 text-success-800",
                                            "قيد التنفيذ" => "bg-warning-100 text-warning-800",
                                            "مكتمل" => "bg-info-100 text-info-800",
                                            "معلق" => "bg-danger-100 text-danger-800",
                                            _ => "bg-gray-100 text-gray-800"
                                        };
                                    }
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @projectStatusClass">
                                        @project.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @project.StartDate.ToString("yyyy-MM-dd")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex space-x-2 space-x-reverse">
                                        <a href="@Url.Action("Details", "Projects", new { id = project.Id })" class="text-info-600 hover:text-info-900">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Projects", new { id = project.Id })" class="text-primary-600 hover:text-primary-900">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <i class="fas fa-project-diagram text-4xl text-gray-400 mb-4"></i>
                <p class="text-lg text-gray-500">لا توجد مشاريع مرتبطة بهذه المؤسسة</p>
            </div>
        }
    </div>
</div>