@model IEnumerable<AssistanceManagementSystem.Models.Organization>
@{
    ViewData["Title"] = "إدارة المؤسسات";
}

<div class="page-header">
    <div class="d-flex flex-column flex-sm-row align-items-center justify-content-between">
        <div>
            <h1 class="page-title d-flex align-items-center gap-3">
                <div class="header-icon">
                    <i class="fas fa-building"></i>
                </div>
                إدارة المؤسسات
            </h1>
            <p class="page-subtitle">إدارة المؤسسات والجهات الشريكة في النظام</p>
        </div>
        <div class="mt-4 mt-sm-0">
            <a href="@Url.Action("Create", "Organizations")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                إضافة مؤسسة جديدة
            </a>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="stats-grid mb-8">
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="stat-title">إجمالي المؤسسات</div>
        </div>
        <div class="stat-value">@Model.Count()</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background: linear-gradient(135deg, var(--success-500), var(--success-600));">
                <i class="fas fa-heart"></i>
            </div>
            <div class="stat-title">مؤسسات خيرية</div>
        </div>
        <div class="stat-value">@Model.Count(o => o.Type == "خيرية")</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background: linear-gradient(135deg, var(--warning-500), var(--warning-600));">
                <i class="fas fa-hospital"></i>
            </div>
            <div class="stat-title">مؤسسات طبية</div>
        </div>
        <div class="stat-value">@Model.Count(o => o.Type == "طبية")</div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon" style="background: linear-gradient(135deg, var(--info-500), var(--info-600));">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <div class="stat-title">مؤسسات تعليمية</div>
        </div>
        <div class="stat-value">@Model.Count(o => o.Type == "تعليمية")</div>
    </div>
</div>

<!-- Organizations Table -->
<div class="content-section">
    <div class="section-header">
        <h2 class="section-title d-flex align-items-center gap-3">
            <div class="header-icon" style="background: linear-gradient(135deg, var(--secondary-500), var(--secondary-600));">
                <i class="fas fa-table"></i>
            </div>
            قائمة المؤسسات
        </h2>
    </div>
        
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>المؤسسة</th>
                    <th>النوع</th>
                    <th>العنوان</th>
                    <th>الهاتف</th>
                    <th>رقم الحساب</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var organization in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="table-avatar">
                                                <i class="fas fa-building"></i>
                                            </div>
                                        </div>
                                        <div class="mr-4">
                                            <div class="table-text-primary">@organization.Name</div>
                                            <div class="table-text-secondary">@organization.ContactPerson</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @{
                                        var typeClass = organization.Type switch
                                        {
                                            "خيرية" => "badge-success",
                                            "طبية" => "badge-error",
                                            "تعليمية" => "badge-info",
                                            "اجتماعية" => "badge-warning",
                                            "تنموية" => "badge-primary",
                                            _ => "badge-neutral"
                                        };
                                    }
                                    <span class="badge @typeClass">
                                        @organization.Type
                                    </span>
                                </td>
                                <td>
                                    @organization.Address
                                </td>
                                <td>
                                    @organization.Phone
                                </td>
                                <td>
                                    @organization.AccountNumber
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("Details", "Organizations", new { id = organization.Id })" class="btn btn-sm btn-outline">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", "Organizations", new { id = organization.Id })" class="btn btn-sm btn-outline">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Organizations", new { id = organization.Id })" class="btn btn-sm btn-outline" onclick="return confirm('هل أنت متأكد من حذف هذه المؤسسة؟')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-12">
                                <i class="fas fa-inbox text-4xl text-neutral-300 mb-4"></i>
                                <p class="text-lg text-neutral-900">لا توجد مؤسسات في النظام</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
