@model AssistanceManagementSystem.Models.Beneficiary
@{
    ViewData["Title"] = "تعديل المستفيد";
}

<div class="min-h-screen bg-gradient-to-br from-geyser to-primary-50">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    <i class="fas fa-user-edit text-primary-600 mr-3"></i>
                    تعديل المستفيد
                </h1>
                <p class="text-gray-600">تعديل بيانات المستفيد</p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="@Url.Action("Index", "Beneficiaries")" class="btn-secondary">
                    <i class="fas fa-arrow-right mr-2"></i>
                    العودة لقائمة المستفيدين
                </a>
            </div>
        </div>
    </div>

    <!-- Edit Beneficiary Form -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <form asp-action="Edit" method="post" class="space-y-6">
            <input asp-for="Id" type="hidden" />
            <input asp-for="CreatedAt" type="hidden" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Personal Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-gray-800 border-b border-gray-200 pb-2">
                        <i class="fas fa-user text-primary-600 mr-2"></i>
                        المعلومات الشخصية
                    </h3>
                    
                    <div>
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-2">الاسم الكامل</label>
                        <input asp-for="FullName" class="form-input" placeholder="أدخل الاسم الكامل">
                        <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="NationalId" class="block text-sm font-medium text-gray-700 mb-2">الرقم القومي</label>
                        <input asp-for="NationalId" class="form-input" placeholder="أدخل الرقم القومي" maxlength="14">
                        <span asp-validation-for="NationalId" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-2">رقم الهاتف</label>
                        <input asp-for="Phone" class="form-input" placeholder="أدخل رقم الهاتف">
                        <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700 mb-2">العنوان</label>
                        <textarea asp-for="Address" class="form-textarea" rows="3" placeholder="أدخل العنوان"></textarea>
                        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-gray-800 border-b border-gray-200 pb-2">
                        <i class="fas fa-info-circle text-primary-600 mr-2"></i>
                        معلومات إضافية
                    </h3>
                    
                    <div>
                        <label asp-for="Gender" class="block text-sm font-medium text-gray-700 mb-2">الجنس</label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">اختر الجنس</option>
                            <option value="ذكر">ذكر</option>
                            <option value="أنثى">أنثى</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Religion" class="block text-sm font-medium text-gray-700 mb-2">الدين</label>
                        <select asp-for="Religion" class="form-select">
                            <option value="">اختر الدين</option>
                            <option value="مسلم">مسلم</option>
                            <option value="مسيحي">مسيحي</option>
                            <option value="أخرى">أخرى</option>
                        </select>
                        <span asp-validation-for="Religion" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="MaritalStatus" class="block text-sm font-medium text-gray-700 mb-2">الحالة الاجتماعية</label>
                        <select asp-for="MaritalStatus" class="form-select">
                            <option value="">اختر الحالة الاجتماعية</option>
                            <option value="عازب">عازب</option>
                            <option value="متزوج">متزوج</option>
                            <option value="مطلق">مطلق</option>
                            <option value="أرمل">أرمل</option>
                        </select>
                        <span asp-validation-for="MaritalStatus" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="FamilyMembers" class="block text-sm font-medium text-gray-700 mb-2">عدد أفراد العائلة</label>
                        <input asp-for="FamilyMembers" type="number" class="form-input" placeholder="أدخل عدد أفراد العائلة">
                        <span asp-validation-for="FamilyMembers" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Income" class="block text-sm font-medium text-gray-700 mb-2">الدخل</label>
                        <input asp-for="Income" type="number" step="0.01" class="form-input" placeholder="أدخل الدخل">
                        <span asp-validation-for="Income" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="BranchId" class="block text-sm font-medium text-gray-700 mb-2">الفرع</label>
                        <select asp-for="BranchId" class="form-select" asp-items="ViewBag.Branches">
                            <option value="">اختر الفرع</option>
                        </select>
                        <span asp-validation-for="BranchId" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex justify-end space-x-4 space-x-reverse pt-6 border-t border-gray-200">
                <a href="@Url.Action("Index", "Beneficiaries")" class="btn-secondary">
                    <i class="fas fa-times mr-2"></i>
                    إلغاء
                </a>
                <button type="submit" class="btn-primary">
                    <i class="fas fa-save mr-2"></i>
                    حفظ التغييرات
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}