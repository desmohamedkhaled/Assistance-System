{
  "buildCommand": "rm -rf node_modules package-lock.json && npm install && npm run build",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { 
        "cache-control": "max-age=31536000",
        "content-type": "text/css"
      }
    },
    {
      "src": "/(.*\\.css)",
      "headers": { 
        "cache-control": "max-age=31536000",
        "content-type": "text/css"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
